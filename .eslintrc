{
    "root": true,
    "env": {
      "browser": true,
      "node": true,
      "jest": true
    },
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "extends": [
      "eslint:recommended",
      "prettier",
      "prettier/vue",
      "plugin:vue/essential",
      "plugin:prettier/recommended"
    ],
    "plugins": ["prettier"],
    "ignorePatterns": ["dist/", "node_modules/"],
    "rules": {
      "prettier/prettier": "warn",
      "no-console": ["warn", { "allow": ["warn", "error"] }],
      "vue/no-parsing-error": [2, { "x-invalid-end-tag": false }]
    }
  }